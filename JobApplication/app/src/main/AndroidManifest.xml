<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jobapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/wlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round_wlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".ResultdetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DetailsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ForgotpassActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NavigationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.JobApplication.NoActionBar" />
        <activity
            android:name=".authentication.SignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".authentication.SigninActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IntroductionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>